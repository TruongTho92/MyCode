<header class="navbar navbar-fixed-top navbar-inverse css-header">
  <div class="container">
    <%= link_to t("app_name"), root_url, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), "/static_pages/home" %></li>
        <li><%= link_to t("header.help"), "/static_pages/help" %></li>
        <li><%= link_to t("header.contact"), "/static_pages/contact" %></li>
        <% if logged_in? %>
          <li><%= link_to t("users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", 'data-toggle': "dropdown" do %>
              <%= t "account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to "Log out", logout_path %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
  
  <div class="mult-language" id="mult-language">
    <%= link_to image_tag("usa.png", size: "45x23"), locale:"en" %>
    <%= link_to image_tag("ja.png", size: "45x23"), locale:"ja" %>
  </div> 
  <%# <li><%= select_tag(:locale, options_for_select(['English', 'en'], ['Japanese', 'en']])) %>
</header>