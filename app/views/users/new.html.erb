<% provide :title, 'sign_up' %>
<h1 class="title_form">Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :date %>
    <%= f.date_field :date_of_birth %>
    <%= f.label :gender %>
    <%= f.select :gender, ["male", "female", "other"] %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, t("confirmation") %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit 'create_my_account', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>