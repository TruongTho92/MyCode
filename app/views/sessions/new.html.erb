<%= javascript_include_tag 'session/session.js' %>
<% provide :title, t("log_in") %>
<h1 class="title_form"><%= t("form.login") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label t("form.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t("form.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      <input type="button" name="commit" value="Log in" class="btn btn-primary btn-login" data-disable-with="Log in">
    <% end %>
    <p>
      <%= t("form.new_user") %><%= link_to t("form.sign_up_now"), signup_path %>
      <%= link_to t("form.forgot"), new_password_reset_path %>
    </p>
  </div>
</div>

